@namespace Cumdumps.Server.Components.Layout
@inherits LayoutComponentBase

<CascadingAuthenticationState>
  <div class="page">
    <div class="sidebar">
      <NavMenu />
    </div>

    <main>
      <div class="top-row ml-4">
        <div class="justify-content-start col page-title">
            <SectionOutlet SectionName="Title" />
        </div>
        <div class="justify-content-end col">
          <LoginPartial />
        </div>
      </div>

      <article class="content px-4">
            @Body
      </article>
    </main>
  </div>

  <div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
  <span class="dismiss">🗙</span>
</div>
<EnsureUserIs18OrOlder />
</CascadingAuthenticationState>
