@page "/claims"
@namespace Short.IO.Web.Server.Components
@inherits UserClaimsBase
<AuthorizeView>
  <Authorized>
    <h4>
        @context.User.Identity.Name has successfully signed-in
    </h4>
    Claims from the ID token
    <table class="table">
        <thead>
            <tr>
                <th>Claim Type</th>
                <th>Value</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var claim in _claims)
            {
            <tr>
                <td>@claim.Type</td>
                <td>@claim.Value</td>
            </tr>
            }
        </tbody>
    </table>
  </Authorized>
  <NotAuthorized>
    <p>You are not logged in!</p>
    <a href="/login" class="btn btn-primary">Click here to log in!</a>
  </NotAuthorized>
</AuthorizeView>
